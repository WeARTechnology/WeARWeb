<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Importa Jquery, o icone da página , o css da navbar e do footer-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="shortcut icon" type="image/png" href="/img/icon.png">
    <link rel="stylesheet" href="~/css/navbar.css">
    <link rel="stylesheet" href="~/css/footer.css">
    <link rel="stylesheet" href="~/css/searchBar.css">
</head>

<body>
    <!-- Início navbar -->
    <header>
        <!-- Cabaçalho do site -->
        <nav>
            <!-- Seção de navagação do cabeçalho -->
            <a href="/Home/Index" class="logo"><img src="~/img/icon3.png" alt="" /></a>
            <!-- Logotipo e redirecionamento para a página home -->
            <!-- Menu responsivo/hambúrguer -->
            <div class="mobile-menu">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>

            <!-- Lista de itens de navegação -->
            <ul class="nav-list" id="nav-list">
                <!-- 'li' representa cada item e cada 'a' um redirecionamento para uma página diferente -->
                <li><a>@Html.ActionLink("Óculos de grau", "catalogo", "Home", routeValues: new { categoria = "Oculos Grau" })</a></li>
                <li><a>@Html.ActionLink("Óculos de sol", "catalogo", "Home", routeValues: new { categoria = "Oculos Sol" })</a></li>
                <li><a>@Html.ActionLink("Anéis", "catalogo", "Home", routeValues: new { categoria = "Anel" })</a></li>
                <li><a href="/Cart/Carrinho"><img src="/img/compras.png" alt="Carrinho"></a></li>
                <li><a href="/Home/Contato"><img src="/img/telefone.png" alt="Contato"></a></li>
                <li><img id="btnBusca" src="/img/pesquisar.png" alt="Pesquisar"></li>
            </ul>
        </nav>
    </header>
    <!-- Fim navbar -->
    <!-- inicio searchBar -->
    <div class="pesquisa">
        <div id="divBusca">
            <form  id="formBusca" method="post">
                <input type="text" id="txtBusca" placeholder="Digite o que procura" onkeydown="enviarBusca(event)"/>
                <button><img src="~/img/fechar.png" id="btnFecharBusca" alt="Buscar" /></button>
                <hr>
            </form>
        </div>
    </div>
    <!-- Fim searchBar -->
    @RenderBody()
    <!-- Footer -->
    <div class="footer">
        <footer>
            <!-- Divisão das ondas apresentadas no footer -->
            <div class="waves">
                <div class="wave" id="wave1"></div>
                <div class="wave" id="wave2"></div>
                <div class="wave" id="wave3"></div>
            </div>

            <!-- Adicionando os ícones das redes sociais - no caso, gitHub e Instagram -->
            <ul class="social_icon">
                <li>
                    <a href="https://instagram.com/wear.solutions?igshid=MzRlODBiNWFlZA==">
                        <ion-icon name="logo-instagram"></ion-icon>
                    </a>
                </li>
                <li>
                    <a href="https://github.com/WeARTechnology">
                        <ion-icon name="logo-github"></ion-icon>
                    </a>
                </li>
            </ul>

            <!-- Redirecionamentos -->
            <ul class="menu">
                <li><a href="/Home/Index">Home</a></li>
                <li><a href="/Home/contato">Contato</a></li>
                <li><a href="/Home/catalogo">Catálogo</a></li>
                <li><a href="/Home/Faq">FAQ</a></li>
            </ul>

            <!-- Marca d'água -->
            <ul class="marca_dagua">
                <li>
                    WeAr Technology | Trabalho de Conclusão de Curso | All Rights
                    Reserved
                </li>
            </ul>
        </footer>
    </div>

    <!-- Instalação do material necessário para usar os ícones do ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <!-- Fim do Footer -->
</body>
<!-- Importando o JavaScript -->
<script src="~/js/navbar.js"></script>
<script src="~/js/searchBar.js"></script>
<script>
    function enviarBusca(event) {
        if (event.keyCode === 13) {//Se a tecla pressionada for 13 (enter)
            event.preventDefault(); // Previne o padrão de acontecer

            //Pega o texto e o formulário
            var texto = document.getElementById("txtBusca").value;
            var form = document.getElementById("formBusca");
            console.log(texto);

            //Define a url de busca com o dado do texto
            var url = '/Home/Catalogo?busca=' + encodeURIComponent(texto);

            console.log(url);

            //Define a ação do formulário e a executa
            form.action = url;
            form.submit();
        }

    }
</script>
</html>
